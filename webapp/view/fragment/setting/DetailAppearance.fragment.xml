<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<f:SimpleForm editable="true"
			layout="ResponsiveGridLayout"
			title="{i18n>settingsAppearance}"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="4"
			adjustLabelSpan="false"
			emptySpanXL="1"
			emptySpanL="1"
			emptySpanM="1"
			emptySpanS="1"
			columnsXL="7"
			columnsL="7"
			columnsM="7"
			singleContainerFullSize="false" 
			class="sapUiTinyMargin" >
			<f:content>
				<Label text="{i18n>settingsAppearanceTheme}" />
				<Select id="selDetailAppearanceTheme" selectedKey="{/selDetailAppearanceThemeCurrentValue}" >
					<items>
						<core:Item key="sap_belize" text="Belize" />
						<core:Item key="sap_bluecrystal" text="Bluecrystal" />
						<core:Item key="sap_hcb" text="Dark" />
						
					</items>
				</Select>
				<Label text="{i18n>settingsAppearanceNotification}" />
				<StepInput id="stiDetailAppearanceNotifications" min="20" max="50" textAlign="Center"  value="{/stiDetailAppearanceNotificationsCurrentValue}" />
			</f:content>
		</f:SimpleForm>
</core:FragmentDefinition>