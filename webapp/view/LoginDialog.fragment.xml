<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog id="loginDialog" title="Login" >
		<content>
			<f:Form id="form" editable="true" width="100%" >
			    <f:layout>
                    <f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                	<f:FormContainer>
                		<f:FormElement>
            			    <MessageStrip
            			    	id="loginErrorMessage"
								text="This is a error Message coming from server\n and nothing happens!"
								type="Error"
								visible= "false"
								showIcon="true"
								showCloseButton="true"
								class="sapUiMediumMarginBottom">
							</MessageStrip>
                		</f:FormElement>
                		 <f:FormElement label="Username">
                		 	 <f:fields>
                		 	 	<Input
                                    id="inputUser" 
                                    type="Text" 
                                    value="{
                                        path: '/InputUserValue',
                                        type: 'sap.ui.model.type.String',
                                        constraints: {
                                            minLength: 1
                                        }
                                    }" />
                		 	 </f:fields>
                		 </f:FormElement>
                		 <f:FormElement label="Password">
                		 	 <f:fields>
                		 	 	<Input
                                    id="inputPassword" 
                                    type="Password" 
                                    value="{
                                        path: '/InputPasswordValue',
                                        type: 'sap.ui.model.type.String',
                                        constraints: {
                                            minLength: 1
                                        }
                                    }"/>
                		 	 </f:fields>
                		 </f:FormElement>
                	</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton>
			<Button text="Close" press="onClose"/>
		</beginButton>
		<endButton>
			<Button id="btnLogin" text="Login" enabled="true"  press="onLogin"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>